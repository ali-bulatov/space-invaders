                        <GradientStop Color="White" Offset="0.51"/>
                        <GradientStop Color="Black" Offset="1"/>
                        <GradientStop Color="#FFF5AB0C" Offset="0.263"/>
                        <GradientStop Color="#FFF5AB0C" Offset="0.778"/>
                    </LinearGradientBrush>
