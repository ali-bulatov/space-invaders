        <Border Grid.Column="1" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Stretch" Width="80">
            <Button x:Name="_btnLeft" Content="&lt;-" Height="72" Width="80" FontSize="36" Foreground="Black" Click="OnMoveClicked">
