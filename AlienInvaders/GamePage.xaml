                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#FF0DD421" Offset="0.296"/>
                        <GradientStop Color="Black" Offset="0.988"/>
                        <GradientStop Color="#FF0DD421" Offset="0.728"/>
                        <GradientStop Color="#FFBFFFC6" Offset="0.51"/>
                    </LinearGradientBrush>
