                        <GradientStop Color="White" Offset="0.51"/>
                        <GradientStop Color="#FFF5AB0C" Offset="0.251"/>
                        <GradientStop Color="Black" Offset="1"/>
                        <GradientStop Color="#FFF5AB0C" Offset="0.782"/>
